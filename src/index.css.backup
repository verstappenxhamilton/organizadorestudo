.btn-success:hover {
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  box-shadow: 0 6px 20px rgba(16, 185, 129, 0.4);
  transform: translateY(-1px);
}

.btn-info {
  background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
  color: white;
  box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
}

.btn-info:hover {
  background: linear-gradient(135deg, #0891b2 0%, #0e7490 100%);
  box-shadow: 0 6px 20px rgba(6, 182, 212, 0.4);
  transform: translateY(-1px);
}

/* Toast styles */
.toast {
  @apply fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg z-50 max-w-sm;
}

.toast.success {
  @apply bg-green-600 text-white;
}

.toast.error {
  @apply bg-red-600 text-white;
}

.toast.warning {
  @apply bg-yellow-600 text-white;
}

.toast.info {
  @apply bg-blue-600 text-white;
}

/* Calendar styles */
.calendar-container {
  @apply bg-slate-800 rounded-xl shadow-lg border border-slate-700 p-6;
}

.calendar-header {
  @apply flex items-center justify-between mb-4;
}

.calendar-nav {
  @apply p-2 rounded-lg hover:bg-slate-700 transition-colors text-slate-300 hover:text-slate-100;
}

.calendar-grid {
  @apply grid grid-cols-7 gap-1;
}

.calendar-day {
  @apply aspect-square flex items-center justify-center text-sm rounded-lg cursor-pointer transition-colors hover:bg-slate-700 text-slate-300;
}

.calendar-day.today {
  @apply bg-sky-600 text-white hover:bg-sky-700;
}

.calendar-day.has-review {
  @apply bg-green-900 text-green-200 hover:bg-green-800;
}

/* Progress bar styles */
.progress-bar {
  @apply w-full bg-slate-700 rounded-full h-2;
}

.progress-fill {
  @apply h-2 bg-sky-600 rounded-full transition-all duration-300;
}

/* Empty state styles */
.empty-state {
  @apply text-center py-12;
}

.empty-state-icon {
  @apply mx-auto mb-4 text-slate-500;
}

.empty-state-text {
  @apply text-slate-400 mb-4;
}

/* Utility classes */
.text-muted {
  @apply text-slate-400;
}

.border-muted {
  @apply border-slate-700;
}

.bg-muted {
  @apply bg-slate-800;
}

/* Slider styles */
.slider::-webkit-slider-thumb {
  appearance: none;
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background: #0ea5e9;
  cursor: pointer;
  border: 2px solid #1e293b;
}

.slider::-moz-range-thumb {
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background: #0ea5e9;
  cursor: pointer;
  border: 2px solid #1e293b;
}

/* Ciclo de Estudos Visual */
.study-cycle-indicator {
  margin-top: 20px;
  padding: 15px;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 8px;
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.study-cycle-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
  font-weight: 600;
  color: #3B82F6;
}

.study-cycle-icon {
  font-size: 16px;
}

.study-cycle-title {
  font-size: 14px;
}

.study-cycle-subjects {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.study-cycle-item {
  display: flex;
  flex-direction: column;
  padding: 8px 12px;
  border-radius: 6px;
  min-width: 120px;
  font-size: 12px;
}

.cycle-subject-name {
  font-weight: 600;
  margin-bottom: 2px;
}

.cycle-subject-weight {
  color: #6B7280;
  font-size: 11px;
}

/* Modal de Sessão - Correção de scroll */
.session-modal {
  max-height: 90vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.session-modal-content {
  overflow-y: auto;
  max-height: calc(90vh - 80px); /* Subtraindo altura do header */
  flex: 1;
}

/* Responsividade para ciclo de estudos */
@media (max-width: 768px) {
  .study-cycle-subjects {
    flex-direction: column;
  }

  .study-cycle-item {
    min-width: auto;
  }

  .session-modal {
    max-height: 95vh;
    margin: 2.5vh auto;
  }

  .session-modal-content {
    max-height: calc(95vh - 80px);
  }
}

/* Header Unificado */
.app-header-unified {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  border: 1px solid rgba(148, 163, 184, 0.2);
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.header-main-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.header-brand {
  display: flex;
  align-items: center;
  gap: 12px;
}

.brand-icon {
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  border-radius: 10px;
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.brand-text {
  display: flex;
  flex-direction: column;
}

.brand-title {
  margin: 0;
  font-size: 1.6rem;
  font-weight: 700;
  background: linear-gradient(135deg, #60a5fa 0%, #a78bfa 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.brand-subtitle {
  margin: 4px 0 0 0;
  color: #94a3b8;
  font-size: 0.9rem;
  font-weight: 400;
}

.header-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 16px;
  border-radius: 8px;
  border: none;
  font-size: 0.85rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
}

.action-btn.primary:hover {
  background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
  transform: translateY(-1px);
}

.action-btn.secondary {
  background: rgba(71, 85, 105, 0.3);
  color: #e2e8f0;
  border: 1px solid rgba(148, 163, 184, 0.2);
}

.action-btn.secondary:hover {
  background: rgba(71, 85, 105, 0.5);
  border-color: rgba(148, 163, 184, 0.3);
}

.header-profile-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16px;
  border-top: 1px solid rgba(148, 163, 184, 0.2);
}

.profile-controls {
  display: flex;
  align-items: center;
  gap: 16px;
}

.profile-selector {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #e2e8f0;
  font-size: 0.9rem;
}

.profile-icon {
  color: #94a3b8;
}

.profile-label {
  font-weight: 500;
  color: #94a3b8;
}

.profile-select {
  background: rgba(71, 85, 105, 0.3);
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 6px;
  padding: 6px 12px;
  color: #e2e8f0;
  font-size: 0.85rem;
  min-width: 200px;
}

.profile-select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
}

.no-profile {
  color: #94a3b8;
  font-style: italic;
  font-size: 0.85rem;
}

.profile-actions {
  display: flex;
  gap: 6px;
}

.profile-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  border-radius: 6px;
  border: none;
  font-size: 0.75rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.profile-btn.edit {
  background: rgba(245, 158, 11, 0.2);
  color: #fbbf24;
  border: 1px solid rgba(245, 158, 11, 0.3);
}

.profile-btn.edit:hover {
  background: rgba(245, 158, 11, 0.3);
}

.profile-btn.create {
  background: rgba(34, 197, 94, 0.2);
  color: #4ade80;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.profile-btn.create:hover {
  background: rgba(34, 197, 94, 0.3);
}

.connection-status {
  display: flex;
  align-items: center;
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.8rem;
  color: #94a3b8;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #22c55e;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* Loading Screen Melhorado */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  gap: 20px;
}

.loading-spinner {
  width: 50px;
  height: 50px;
  border: 4px solid rgba(59, 130, 246, 0.2);
  border-left: 4px solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-message {
  color: #94a3b8;
  font-size: 1rem;
  font-weight: 500;
  margin: 0;
  text-align: center;
}

.loading-progress {
  width: 200px;
  height: 4px;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 2px;
  overflow: hidden;
}

.loading-bar {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
  border-radius: 2px;
  animation: loading-progress 2s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes loading-progress {
  0% { transform: translateX(-100%); }
  50% { transform: translateX(0%); }
  100% { transform: translateX(100%); }
}

/* Navegação e Breadcrumb */
.navigation-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding: 12px 20px;
  background: rgba(15, 23, 42, 0.4);
  border-radius: 8px;
  border: 1px solid rgba(148, 163, 184, 0.1);
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
}

.breadcrumb-item {
  color: #94a3b8;
  font-weight: 500;
}

.breadcrumb-item.active {
  color: #e2e8f0;
  font-weight: 600;
}

.breadcrumb-separator {
  color: #64748b;
  font-weight: 300;
}

/* Estatísticas Rápidas */
.quick-stats {
  display: flex;
  gap: 20px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.stat-value {
  font-size: 1.2rem;
  font-weight: 700;
  color: #3b82f6;
}

.stat-label {
  font-size: 0.75rem;
  color: #94a3b8;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Responsividade para navegação */
@media (max-width: 768px) {
  .navigation-section {
    flex-direction: column;
    gap: 12px;
    align-items: stretch;
  }

  .breadcrumb {
    justify-content: center;
  }

  .quick-stats {
    justify-content: space-around;
    gap: 10px;
  }

  .stat-item {
    flex: 1;
  }

  .stat-value {
    font-size: 1rem;
  }

  .stat-label {
    font-size: 0.7rem;
  }
}

/* Responsividade para header unificado */
@media (max-width: 768px) {
  .header-main-section {
    flex-direction: column;
    gap: 16px;
    align-items: stretch;
  }

  .header-brand {
    justify-content: center;
  }

  .header-actions {
    justify-content: center;
  }

  .header-profile-section {
    flex-direction: column;
    gap: 12px;
    align-items: stretch;
  }

  .profile-controls {
    flex-direction: column;
    gap: 12px;
    align-items: stretch;
  }

  .profile-selector {
    justify-content: center;
  }

  .profile-actions {
    justify-content: center;
  }
}

