  border-color: rgba(59, 130, 246, 0.6);
  transform: translateY(-1px);
}

.calendar-month-year {
  color: #f1f5f9;
  font-weight: 600;
  font-size: 1rem;
  min-width: 140px;
  text-align: center;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 1px;
  background: rgba(71, 85, 105, 0.2);
  border-radius: 8px;
  overflow: hidden;
  border: 1px solid rgba(71, 85, 105, 0.3);
}

.calendar-day-header {
  background: rgba(15, 23, 42, 0.9);
  color: #94a3b8;
