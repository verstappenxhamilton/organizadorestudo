}

.calendar-day-indicators {
  display: flex;
  gap: 2px;
  margin-top: 2px;
  justify-content: center;
}

.calendar-indicator {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: #10b981;
  flex-shrink: 0;
}

